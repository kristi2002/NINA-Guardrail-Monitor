# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5001

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7

# Guardrails Configuration
GUARDRAILS_API_KEY=your-guardrails-api-key-here
GUARDRAILS_VALIDATION_LEVEL=strict

# Service Configuration
SERVICE_NAME=guardrail-service
LOG_LEVEL=INFO

# Kafka Topics (Output - this service is a Producer)
KAFKA_OUTPUT_TOPIC_PATTERN=guardrail.conversation.*

# Guardrail Rules
GUARDRAIL_ENABLE_PII_DETECTION=True
GUARDRAIL_ENABLE_TOXICITY_CHECK=True
GUARDRAIL_ENABLE_COMPLIANCE_CHECK=True

