# ============================================
# OFH Dashboard - Environment Configuration
# ============================================
# Copy this file to .env and configure for your environment
# DO NOT commit the .env file to version control!

# ============================================
# SECRET KEYS (CHANGE THESE IN PRODUCTION!)
# ============================================
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production-min-32-chars

# ============================================
# DATABASE CONFIGURATION
# ============================================
# For PRODUCTION: Use PostgreSQL
DATABASE_URL=postgresql://nina_user:nina_pass@localhost:5432/nina_db

# Individual database settings (alternative to DATABASE_URL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=nina_db
DATABASE_USER=nina_user
DATABASE_PASSWORD=nina_pass

# For DEVELOPMENT: Use SQLite (uncomment the line below and comment out PostgreSQL)
# DATABASE_URL=sqlite:///nina_dashboard.db

# ============================================
# KAFKA CONFIGURATION
# ============================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=nina-dashboard-v2
KAFKA_CLIENT_ID=nina-dashboard-client

# ============================================
# APPLICATION CONFIGURATION
# ============================================
APP_HOST=0.0.0.0
APP_PORT=5000
APP_DEBUG=False  # Set to False in production!

# ============================================
# KAFKA TOPIC CONFIGURATION
# ============================================
TOPIC_RETENTION_MS=604800000  # 7 days
TOPIC_CLEANUP_POLICY=delete
TOPIC_SEGMENT_MS=86400000  # 1 day
TOPIC_COMPRESSION_TYPE=snappy
TOPIC_MIN_INSYNC_REPLICAS=1
TOPIC_REPLICATION_FACTOR=1

# ============================================
# SECURITY CONFIGURATION
# ============================================
SECURITY_ENABLED=True
JWT_EXPIRATION_HOURS=24

# CORS Configuration
# For development: use '*' to allow all origins
# For production: specify allowed origins separated by commas
# Example: CORS_ORIGINS=http://localhost:3001,https://dashboard.example.com
CORS_ORIGINS=*

# ============================================
# MONITORING & LOGGING
# ============================================
MONITORING_ENABLED=True
LOG_LEVEL=INFO
ALERT_EMAIL=admin@example.com

# ============================================
# REDIS CONFIGURATION (Optional)
# ============================================
# For development: use 'memory://' for in-memory storage
# For production: use 'redis://localhost:6379/0' or 'redis://redis:6379/0' in Docker
REDIS_URL=memory://
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============================================
# DEAD LETTER QUEUE CONFIGURATION
# ============================================
DLQ_TOPIC=guardrail.dlq
DLQ_RETENTION_MS=2592000000  # 30 days
DLQ_MAX_RETRY_ATTEMPTS=3

# ============================================
# EMAIL CONFIGURATION
# ============================================
EMAIL_ENABLED=False
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True
EMAIL_FROM=noreply@ofh-dashboard.local
EMAIL_FROM_NAME=OFH Dashboard

# ============================================
# ESCALATION CONFIGURATION
# ============================================
ESCALATION_ENABLED=True
ESCALATION_SUPERVISOR_EMAIL=supervisor@ofh-dashboard.local
ESCALATION_LEVEL_LOW_MINUTES=60
ESCALATION_LEVEL_MEDIUM_MINUTES=30
ESCALATION_LEVEL_HIGH_MINUTES=15
ESCALATION_LEVEL_CRITICAL_MINUTES=5
ESCALATION_CHANNELS=email
ESCALATION_AUTO=True

# ============================================
# NOTIFICATION CONFIGURATION
# ============================================
NOTIFICATION_ENABLED=True
NOTIFICATION_STORAGE=database
NOTIFICATION_RETENTION_DAYS=30
NOTIFICATION_MAX_UNREAD=100
NOTIFICATION_EMAIL_ENABLED=True
NOTIFICATION_SMS_ENABLED=False
NOTIFICATION_SLACK_ENABLED=False
NOTIFICATION_TEAMS_ENABLED=False
SLACK_WEBHOOK_URL=

