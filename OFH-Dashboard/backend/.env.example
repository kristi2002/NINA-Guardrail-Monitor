# OFH Dashboard Backend Configuration
# Copy this file to .env and update with your actual values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Leave empty for mock data mode (default)
# For PostgreSQL: postgresql://username:password@localhost:5432/ofh_dashboard
DATABASE_URL=

# ===========================================
# FLASK CONFIGURATION
# ===========================================
SECRET_KEY=dev-secret-key-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# ===========================================
# API CONFIGURATION
# ===========================================
API_HOST=0.0.0.0
API_PORT=5000
