# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5001

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7

# Guardrails Configuration
GUARDRAILS_API_KEY=your-guardrails-api-key-here
GUARDRAILS_VALIDATION_LEVEL=strict

# Service Configuration
SERVICE_NAME=guardrail-service
LOG_LEVEL=INFO

# Kafka Topics
KAFKA_OUTPUT_TOPIC=guardrail_events
KAFKA_TOPIC_CONTROL=guardrail_control
KAFKA_GROUP_ID=guardrail-strategy-service

# Guardrail Rules
GUARDRAIL_ENABLE_PII_DETECTION=True
GUARDRAIL_ENABLE_TOXICITY_CHECK=True
GUARDRAIL_ENABLE_COMPLIANCE_CHECK=True

# LLM Context-Aware Validation
GUARDRAIL_ENABLE_LLM_CONTEXT_CHECK=True
OPENAI_MODEL=gpt-3.5-turbo-1106
OPENAI_TEMPERATURE=0.3

# Adaptive Learning from Feedback
GUARDRAIL_FEEDBACK_FILE=guardrail_feedback.json
GUARDRAIL_MIN_FEEDBACK=5
GUARDRAIL_ADJUSTMENT_FACTOR=0.1
GUARDRAIL_MAX_ADJUSTMENT=0.5

