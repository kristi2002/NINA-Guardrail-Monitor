# ============================================================================
# Guardrail Strategy - Sample Environment Configuration
# Copy to .env and adjust to your deployment.
# ============================================================================

# --- Flask / Service settings ---
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5001
SERVICE_NAME=guardrail-service
LOG_LEVEL=INFO

# --- Kafka connection ---
# Comma-separated broker list. The defaults assume local Docker compose.
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
# Outbound guardrail events (guardrail -> monitoring app)
KAFKA_OUTPUT_TOPIC=guardrail_events
# Feedback/control channel (monitoring app -> guardrail)
KAFKA_TOPIC_CONTROL=guardrail_control
# Consumer group used for control feedback
KAFKA_GROUP_ID=guardrail-strategy-service

# --- Guardrails OSS configuration ---
GUARDRAILS_API_KEY=your-guardrails-api-key-here
GUARDRAILS_VALIDATION_LEVEL=strict
GUARDRAIL_ENABLE_PII_DETECTION=True
GUARDRAIL_ENABLE_TOXICITY_CHECK=True
GUARDRAIL_ENABLE_COMPLIANCE_CHECK=True
GUARDRAIL_ENABLE_LLM_CONTEXT_CHECK=True

# --- Adaptive feedback learner ---
GUARDRAIL_FEEDBACK_FILE=guardrail_feedback.json
GUARDRAIL_MIN_FEEDBACK=5
GUARDRAIL_ADJUSTMENT_FACTOR=0.1
GUARDRAIL_MAX_ADJUSTMENT=0.5

# --- Optional: OpenAI configuration for context-aware checks ---
# Provide these only if you want the Guard to call OpenAI; otherwise the
# LLM-based validator will be skipped automatically.
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_TEMPERATURE=0.2

